<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <include
        android:id="@+id/back_button"
        layout="@layout/back_button" />

    <TextView
        android:id="@+id/titreLN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/titreLN"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_button"
        app:layout_constraintVertical_bias="0.04" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/titreLN">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="200dp">

            <TextView
                android:id="@+id/lncred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lncred"
                android:textSize="16sp"
                android:paddingStart="12dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"  />

            <TextView
                android:id="@+id/ln1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ln1"
                android:textSize="16sp"
                android:paddingStart="12dp"
                android:paddingEnd="10dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/lncred"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"  />

            <TextView
                android:id="@+id/ln2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ln2"
                android:textSize="16sp"
                android:paddingStart="12dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toBottomOf="@+id/ln1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"  />

            <TextView
                android:id="@+id/ln3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ln3"
                android:textSize="16sp"
                android:paddingStart="12dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toBottomOf="@+id/ln2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"  />

            <TextView
                android:id="@+id/ln4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ln4"
                android:textSize="16sp"
                android:paddingStart="12dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toBottomOf="@+id/ln3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"  />

            <TextView
                android:id="@+id/ln5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ln5"
                android:textSize="16sp"
                android:paddingStart="12dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toBottomOf="@+id/ln4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"  />

            <TextView
                android:id="@+id/ln6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ln6"
                android:textSize="16sp"
                android:paddingStart="12dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toBottomOf="@+id/ln5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"  />

            <TextView
                android:id="@+id/ln7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ln7"
                android:textSize="16sp"
                android:paddingStart="12dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toBottomOf="@+id/ln6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"  />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>