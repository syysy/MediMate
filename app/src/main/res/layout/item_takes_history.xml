<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FF0000"
    android:maxHeight="100sp">

    <TextView
        android:id="@+id/medicine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/nom_du_medicament"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/medicine_dose_forme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/doses_weight_type"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/medicine_name"
        app:layout_constraintTop_toBottomOf="@+id/medicine_name" />

    <TextView
        android:id="@+id/date_prise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        app:layout_constraintBottom_toBottomOf="@+id/medicine_dose_forme"
        app:layout_constraintEnd_toEndOf="@+id/heure_prise"
        app:layout_constraintTop_toTopOf="@+id/medicine_dose_forme"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/heure_prise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/heure"
        app:layout_constraintBottom_toBottomOf="@+id/medicine_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toEndOf="@+id/medicine_name"
        app:layout_constraintTop_toTopOf="@+id/medicine_name" />


</androidx.constraintlayout.widget.ConstraintLayout>
